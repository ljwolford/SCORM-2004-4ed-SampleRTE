<?xml version="1.0"?>
<project name="ADL" default="SRTE" >
    <description>Executes java file that makes sure the correct dbs/tables are created</description>

    <target name="init"></target>

    <target name="compile" depends="init">
        <javac destdir="${buildDir}" srcdir="${src}" >
            <classpath>
                <pathelement location="${lib}/sqlite-jdbc-3.7.2.jar"/>
            </classpath>
        </javac>
    </target>

    <target name="run">
        <java classname="SQLiteJDBC">
            <classpath>
                <pathelement location="${lib}/sqlite-jdbc-3.7.2.jar"/>
            </classpath>
        </java>
    </target>

    <target name="buildSQLiteJar" depends="run">
        <echo message="building jar file from class files"/>
        <jar destfile="${buildDir}/${sqliteJar}" basedir="${buildDir}"
             includes=""/>
    </target>
    <target name="SRTE" depends="buildSQLiteJar"></target>
</project>


